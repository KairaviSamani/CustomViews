    <declare-styleable name="CustomEditText">
        <attr name="custom_borderWidth"/>
        <attr name="custom_borderColor"/>
        <attr name="custom_radius"/>
        <attr name="custom_background"/>
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="custom_borderWidth"/>
        <attr name="custom_borderColor"/>
        <attr name="custom_radius"/>
        <attr name="custom_background"/>
    </declare-styleable>

    <declare-styleable name="CustomLayout">
        <attr name="custom_borderWidth"/>
        <attr name="custom_borderColor"/>
        <attr name="custom_radius"/>
        <attr name="custom_background"/>
    </declare-styleable>
